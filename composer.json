{
  "name": "creatingcode/cmsqlite",
  "version": "2.0.0",
  "type": "project",
  "description": "CMSQLite easy SQLite based CMS",
  "homepage": "https://creatingcode.de",
  "license": "MIT",
  "require": {
    "php": ">=7.4||^8.0",
    "codeigniter4/framework": "^4",
    "mikey179/vfsstream": "^1.6",
    "tatter/relations": "^2.0",
    "ext-mbstring": "*",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Config\\": "app/Config",
      "Admin\\": "admin/",
      "Install\\": "install/"
    },
    "exclude-from-classmap": [
      "**/Database/Migrations/**"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\Support\\": "tests/_support"
    }
  },
  "scripts": {
    "test": "phpunit",
    "post-update-cmd": [
      "@composer dump-autoload"
    ]
  },
  "require-dev": {
    "tatter/patches": "^2.0"
  }
}
